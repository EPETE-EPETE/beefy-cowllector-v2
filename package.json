{
    "name": "beefy-cowllector",
    "version": "2.0.0",
    "description": "The bot to harvest all vaults.",
    "license": "MIT",
    "private": true,
    "scripts": {
        "test": "yarn test:all && yarn build",
        "precommit": "yarn lint:format && yarn test:all",
        "build": "tsc",
        "lint:format": "prettier ./src --write",
        "lint:staged": "lint-staged",
        "test:unit": "LOG_LEVEL=error TZ=UTC jest --maxConcurrency=1",
        "test:lint": "prettier ./src --check",
        "test:ts": "tsc --noEmit",
        "test:outdated": "ncu",
        "test:unused-exports": "ts-unused-exports ./tsconfig.json --showLineNumber",
        "test:all": "yarn test:lint && yarn test:ts && yarn test:unit && yarn test:unused-exports",
        "infra:start": "docker compose -p dev -f docker-compose.dev.yml up -d",
        "infra:logs": "docker compose -p dev -f docker-compose.dev.yml logs -f",
        "infra:stop": "docker compose -p dev -f docker-compose.dev.yml down",
        "redis:console": "docker exec -it redis-dev redis-cli",
        "redis:clear": "docker exec -it redis-dev redis-cli flushall"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.9.3",
        "axios": "^1.4.0",
        "blockchain-addressbook": "^0.43.77",
        "dotenv": "^16.3.1",
        "lodash": "^4.17.21",
        "pino": "^8.15.0",
        "redis": "^4.6.7",
        "viem": "^1.6.0",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/lodash": "^4.14.197",
        "@types/node": "^20.5.0",
        "@types/yargs": "^17.0.24",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "lint-staged": "^14.0.0",
        "npm-check-updates": "^16.12.2",
        "pino-pretty": "^10.2.0",
        "prettier": "^3.0.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "ts-unused-exports": "^10.0.0",
        "typescript": "^5.1.6"
    },
    "lint-staged": {
        "*.{js,ts,json}": "prettier ./src --write"
    }
}
